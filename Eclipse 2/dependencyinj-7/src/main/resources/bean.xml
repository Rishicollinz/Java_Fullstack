<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="rec.Rectangle" id="recObj">
    	<property name="length" value="5"></property>
    	<property name="breadth" value="2"></property>
    </bean>
    
    <bean class="rec.Perimeter" id="periObj">
    	<property name="perimeter" value="#{2*(recObj.getLength()+recObj.getBreadth())}"></property>
    </bean>

</beans>